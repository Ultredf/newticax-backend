{
  "name": "newticax-backend",
  "version": "1.0.0",
  "description": "NewticaX News Platform Backend API",
  "main": "dist/app.js",
  "scripts": {
    "build": "prisma generate && tsc",
    "start": "node dist/app.js",
    "dev": "tsx watch src/app.ts",
    "dev:nodemon": "nodemon --exec tsx src/app.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx scripts/seed.ts",
    "clean": "rimraf dist",
    "fix-usernames": "tsx scripts/fix-usernames.ts",
    "force-regenerate": "node scripts/force-regenerate-prisma.js",
    "remove-passport": "node scripts/remove-passport.js",
    "postinstall": "prisma generate"
  },
  "keywords": [
    "news",
    "api",
    "express",
    "typescript",
    "mongodb",
    "prisma"
  ],
  "author": "NewticaX Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.15",
    "slugify": "^1.6.6",
    "winston": "^3.15.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.12",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.8.4",
    "@types/nodemailer": "^6.4.17",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^9.13.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "prisma": "^5.22.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andriesnrr/newticax-backend.git"
  },
  "bugs": {
    "url": "https://github.com/andriesnrr/newticax-backend/issues"
  },
  "homepage": "https://github.com/andriesnrr/newticax-backend#readme"
}